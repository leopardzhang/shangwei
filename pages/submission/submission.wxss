/* pages/submission/submission.wxss */
.my-customer-class {
  font-size: 16px;
  margin-top: 15px;
  margin-left: 15px;
}

.picker-panel-demo {
  display: block;
  margin-top: 15px;
}

.zan-field {
  margin-bottom: 10px;
}

.up-load-img {
  width: 200rpx;
  height: 200rpx;
  border: 1px dashed #ccc;
  color: #ccc;
  border-radius: 8px;
  font-size: 36px;
  text-align: center;
  display: flex;
  justify-content: space-around;
  flex-direction: column;
  padding: 16px 0;
  box-sizing: border-box;
  margin-right: 30rpx;
  margin-bottom: 30rpx;
}

.zan-icon {
  padding-top: 24px;
}

.img_list {
  display: flex;
  flex-wrap: wrap;
}

.img_box {
  width: 200rpx;
  height: 200rpx;
  margin-right: 30rpx;
  margin-bottom: 30rpx;
  position: relative;
}

.img {
  width: 200rpx;
  height: 200rpx;
  border-radius: 8px;
}

.img_list image:nth-child(3n) {
  margin-right: 0;
}